pkgname=hashicorp-packer-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="Hashicorp Packer v1.0.0"

arch=(x86_64)
url="https://www.packer.io"
license=('MPL2')

groups=('hashicorp')
provides=('hashicorp-packer')

source=('https://releases.hashicorp.com/packer/1.0.0/packer_1.0.0_linux_amd64.zip')
sha256sums=('ed697ace39f8bb7bf6ccd78e21b2075f53c0f23cdfb5276c380a053a7b906853')

package() {
	mkdir -p $pkgdir/usr/bin
	chmod +x packer
	mv packer $pkgdir/usr/bin
}